        </ul>
      <table border="1" class="table table-striped">
          <thead>
          <tr>
              <th>學號</th>
              <th>日期</th>                          
              <th>時分</th>
              <th>互動情形</th>
            <!-- <th>特別註記</th> -->
          </tr>
          </thead>
          <tbody id="active_infopages">
            <tr v-for="active of activelist" :key="active._id">              
                <td>{{active.a05register}}</td>
                <td>{{active.a10day}}</td>
                <td>{{active.a15time}}</td>
                <td>{{active.a20outcome}}</td>
